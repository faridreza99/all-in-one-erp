modules = ["nodejs-20", "python-3.11", "web", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["awsebcli", "cacert", "cargo", "freetype", "glibcLocales", "lcms2", "libffi", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "pkg-config", "rustc", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && BROWSER=none PORT=5000 HOST=0.0.0.0 npm start"
waitForPort = 5000

[[workflows.workflow]]
name = "Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python3 -m uvicorn server:app --host 0.0.0.0 --port 8000 --reload"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 37117
externalPort = 3001

[[ports]]
localPort = 43065
externalPort = 3000

[[ports]]
localPort = 44173
externalPort = 3002

[[ports]]
localPort = 45907
externalPort = 3003

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "cd backend && uvicorn server:app --host 0.0.0.0 --port 5000"]
build = ["sh", "build.sh"]
